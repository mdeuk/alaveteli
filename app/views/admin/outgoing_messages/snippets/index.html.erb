<h1><%= @title %></h1>

<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to 'New snippet', new_admin_snippet_path, class: 'btn btn-primary' %>
  </div>
  <div class="btn-group">
    <%= link_to 'View tags', admin_tags_path(model_type: OutgoingMessage::Snippet), class: 'btn' %>
  </div>
</div>

<% if @snippets.empty? %>
  <div class="row">
    <div class="span12">
      No snippets found.
    </div>
  </div>
<% else %>
  <div class="accordion" id="snippets">
    <%= render partial: 'admin/outgoing_messages/snippets/snippet',
               collection: @snippets %>
    <%= will_paginate(@snippets) %>
  </div>
<% end %>
